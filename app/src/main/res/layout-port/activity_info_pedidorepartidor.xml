<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info_pedido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.foodxplorer.tiendafoodxplorer.InfoPedidoActivity"
    android:background="@drawable/background_d">

    <Button
        android:id="@+id/btnEnReparto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDireccion"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/textViewNombreCliente"
        android:layout_toRightOf="@+id/textViewNombreCliente"
        android:text="En reparto" />

    <TextView
        android:text="Nombre Cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="39dp"
        android:id="@+id/textViewNombreCliente"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Importe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp"
        android:id="@+id/textViewImporte"
        android:layout_alignBaseline="@+id/textViewNombreCliente"
        android:layout_alignBottom="@+id/textViewNombreCliente"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/textViewDireccion"
        android:layout_below="@+id/textViewNombreCliente"
        android:layout_alignLeft="@+id/textViewNombreCliente"
        android:layout_alignStart="@+id/textViewNombreCliente" />

    <Button
        android:id="@+id/btnEntregado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnEnReparto"
        android:layout_alignStart="@+id/btnEnReparto"
        android:layout_below="@+id/btnEnReparto"
        android:layout_marginTop="22dp"
        android:enabled="false"
        android:text="Entregado" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewInfoPedido"
        android:layout_below="@+id/btnEntregado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="69dp" />
</RelativeLayout>
